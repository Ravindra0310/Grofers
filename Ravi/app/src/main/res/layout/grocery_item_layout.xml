<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:elevation="10dp"
    android:layout_margin="16dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/GroceryImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop" />
        <TextView
            android:id="@+id/GroceryMRPPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/GroceryImage"
            android:padding="12dp" />

        <TextView
            android:id="@+id/GroceryPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/GroceryImage"
            android:layout_below="@id/GroceryMRPPrice"
            android:padding="12dp" />
        <TextView
            android:id="@+id/GroceryItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/GroceryImage"
            android:layout_below="@id/GroceryPrice"
            android:padding="12dp" />
        <TextView
            android:id="@+id/GroceryUnitName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/GroceryImage"
            android:layout_below="@id/GroceryItemName"
            android:padding="12dp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>