<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".CartAdapters.MyCartItemActivity">


    <ImageView
        android:id="@+id/MyCartItemImage"
        android:layout_width="200dp"
        android:src="@drawable/ic_address_image"
        android:layout_height="200dp"/>
    <TextView
        android:id="@+id/NoPastOrder"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:text="You have no past orders"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/getStarted"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Let's get you started"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_width="150dp"
        android:text="Start Shopping"
        android:textAllCaps="false"
        android:background="#ea6225"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"/>

</LinearLayout>